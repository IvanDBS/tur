# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database Configuration
POSTGRES_DB=backend_production
POSTGRES_USER=backend
POSTGRES_PASSWORD=your_secure_database_password

# Rails Configuration
RAILS_MASTER_KEY=your_rails_master_key_here
SECRET_KEY_BASE=your_secret_key_base_here
RAILS_MAX_THREADS=25

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# OBS API Configuration
OBS_API_URL=https://api.obs.md
OBS_API_EMAIL=your_obs_email@example.com
OBS_API_PASSWORD=your_obs_password

# Frontend Configuration
VITE_API_URL=https://api.yourdomain.com/api/v1

# CDN Configuration
ASSET_HOST=https://cdn.yourdomain.com
PRODUCTION_HOST=yourdomain.com

# SSL Configuration (if using custom SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here

# Email Configuration (if needed)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@yourdomain.com